@model OnlineRegistration.Models.Subject

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Subject", FormMethod.Post, new { @class = "InfoForm" }))
{
    @Html.HiddenFor(x=>x.SubjectId)

    <div class="wraper">
        <div class="left">
            <span>Subject Name:</span>
        </div>
        <div class="right">
            @Html.TextBoxFor(x => x.SubjectName, new { @class = "fullwidth" })
        </div>

    </div>
    
    <div class="wraper">

        <div class="left">
            <span>Subject Code:</span>
        </div>
        <div class="right">
            @Html.TextBoxFor(x => x.SubjectCode, new { @class = "fullwidth" })
        </div>
    </div>
    
    <div class="wraper">

        <div class="left">
            <span>Credit:</span>
        </div>
        <div class="right">
            @Html.TextBoxFor(x => x.Credit, new { @class = "fullwidth" })
        </div>
    </div>
    
    <div class="wraper">

        <div class="left">
            <span>Subject Type:</span>
        </div>
        <div class="right">
            @Html.RadioButtonFor(x => x.SubjectType, "Theory")<span>Theory</span>
            @Html.RadioButtonFor(x => x.SubjectType, "Sessional")<span>Sessional</span>
        </div>
    </div>
    
    <div class="wraper">

        <div class="left">

        </div>
        <div class="right">
            <input type="submit" value="Submit" />
        </div>
    </div>
}


