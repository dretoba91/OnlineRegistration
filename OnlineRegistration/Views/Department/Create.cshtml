@model OnlineRegistration.Models.Department
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "Department", FormMethod.Post, new { @class = "InfoForm" }))
{

    <div class="wraper">
        <div class="left">
            <span>Department Name:</span>
        </div>
        <div class="right">
            @Html.TextBoxFor(x => x.DepartmentName, new { @class = "fullwidth" })
        </div>

    </div>
    <div class="wraper">

        <div class="left">
            <span>Department Code:</span>
        </div>
        <div class="right">
            @Html.TextBoxFor(x => x.DepartmentCode, new { @class = "fullwidth" })
        </div>
    </div>
    <div class="wraper">

        <div class="left">

        </div>
        <div class="right">
            <input type="submit" value="Submit" />
        </div>
    </div>
}
