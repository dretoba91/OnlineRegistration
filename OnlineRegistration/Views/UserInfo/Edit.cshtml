@model OnlineRegistration.Models.UserInfo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "UserInfo", FormMethod.Post, new { @class = "InfoForm" }))
{
    @Html.HiddenFor(x=>x.UserId)
    @Html.HiddenFor(x=>x.UserTypeCode)
    @Html.HiddenFor(x=>x.EmpOrStdId)
    <div class="wraper">
        <div class="left">
            <span>User Name:</span>
        </div>
        <div class="right">
            @Html.TextBoxFor(x => x.UserName, new { @class = "fullwidth" })
        </div>

    </div>
    <div class="wraper">

        <div class="left">
            <span>Password:</span>
        </div>
        <div class="right">
            @Html.TextBoxFor(x => x.Password, new { @class = "fullwidth" })
        </div>
    </div>
    <div class="wraper">

        <div class="left">

        </div>
        <div class="right">
            <input type="submit" value="Submit" />
        </div>
    </div>
}

